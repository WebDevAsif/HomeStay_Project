<% layout ("layouts/boilerplate.ejs") %> <%- include("../include/sub-nav.ejs") %>
<div class="row mt-5 mb-5 row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings) {%>
  <a href="/listings/<%= listing._id %>" class="cardAnchor">
    <div class="card listing-card px-0.5 mb-3">
      <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text"><%= listing.location%></p>
        <p class="card-title"><b><%= listing.title %></b></p>
        <p class="card-text">
          <b>&#8377; <%= listing.price.toLocaleString("en-IN") %> /</b> night
          <i class="taxes-toggle">+18% GST.</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
